pipeline {
	agent any
	parameters {
		choice(name: 'TARGET_ENV', choices: ['test', 'pre-prod', 'prod'], description: 'Target environment to deploy')
	}	
	environment {
		DEPLOY_TO = "${TARGET_ENV}"
	}	
	stages {
		stage('DEPLOY_TEST') {
			when {
				environment name: 'DEPLOY_TO', value: 'test'
			}	
			steps {
				echo "DEPLOY TO TEST ENVIRONMENT ......."
				sh 'sleep 5'
			}		
		}
		
	stages {
		stage('DEPLOY_PRE-PROD') {
			when {
				environment name: 'DEPLOY_TO', value: 'pre-prod'
			}	
			steps {
				echo "DEPLOY TO TEST ENVIRONMENT ......."
				sh 'sleep 5'
			}		
		}
		stages {
		stage('DEPLOY_PROD') {
			when {
				environment name: 'DEPLOY_TO', value: 'prod'
			}	
			steps {
				echo "DEPLOY TO PRODUCTION ......."
				sh 'sleep 5'
			}		
		}
	}	
}
}
}
